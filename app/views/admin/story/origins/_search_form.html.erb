<%= search_form_for [:admin, @search] do |f| %>
  <table class="table">
  <tr class="field">
    <th><%= f.label :state_eq, "State" %></th>
    <td><%= f.select :state_eq, Settings.states.map{|s| [s.classify, s]}, include_blank: true %></td>
  </tr>
  <tr class="field">
    <th><%= f.label :language_eq, "Language" %></th>
    <td><%= f.select :language_eq, Settings.languages.map{|s| [s, s]}, include_blank: true %></td>
  </tr>
  <tr class="field">
    <th><%= f.label :title_cont, "Title" %></th>
    <td><%= f.text_field :title_cont %></td>
  </tr>
  <tr class="actions"><th colspan="2"><%= f.submit "Search", class: "btn btn-warning" %></th></tr>
  </table>
<% end %>
