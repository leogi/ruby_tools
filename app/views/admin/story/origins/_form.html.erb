<%= form_for [:admin, @resource] do |f| %>
  <% if @resource.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :language %><br>
    <%= f.select :language, Story::LANGUAGES.map{|l| [l, l]} %>
  </div>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, rows: "25", style: "width:800px" %>
  </div>

  <div class="actions">
    <%= f.submit "Publish", class: "btn btn-warning", value: "published" %>
    <%= f.submit "Draft", class: "btn", value: "preview" %>
  </div>
<% end %>
