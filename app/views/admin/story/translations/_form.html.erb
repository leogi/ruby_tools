<%= form_for @translation, url: action_name == "new" ? admin_story_origin_translations_path(@origin) : admin_story_origin_translation_path(@origin, @translation) do |f| %>
  <% if @translation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@translation.errors.count, "error") %> prohibited this diary from being saved:</h2>

      <ul>
      <% @translation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :language %><br>
    <%= f.select :language, Story::LANGUAGES.map{|l| [l, l]} %>
  </div>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, rows: "25", style: "width:800px" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "btn" %>
  </div>
<% end %>
