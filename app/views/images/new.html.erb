<h1 class="page-title">Image to base64</h1>
<%= form_for :image, url: images_path, html: {role: "form"} do |f| %>
  <div class="field form-group">
    <%= f.label :file %>
    <%= f.file_field :file, accept: "image/png,image/gif,image/jpeg", required: true %>
  </div>

  <div class="field form-group">
    <%= f.submit :Analysis, class: "btn btn-warning", style: "margin-top: 20px;" %>
  </div>
<% end %>
<div id="results">
  <textarea style="width:747px;height:500px" placeholder="base64"><%= @base64 if defined? @base64 %></textarea>
</div>
