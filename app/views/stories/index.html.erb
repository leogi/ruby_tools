<% if @current_story %>
<nav class="stories-nav">
<div class="btn-group">
  <button type="button" class="btn btn-default"><%= @current_story.title %></button>
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <% @stories.each do |story| %>
      <li class="<%= story.id == @current_story.id ? 'active' : '' %>"><%= link_to story.title, stories_path(story: story.id) %></li>
    <% end %>
  </ul>
</div>

  <ul class="pager">
    <li><%= link_to "Prev", stories_path(story: @prev_story.id) if @prev_story %></li>
    <li><%= link_to "Next", stories_path(story: @next_story.id) if @next_story %></li>
  </ul>
</nav>


<div class="story-content">
  <h2><%= @current_story.title %></h2>
  <div class="alert alert-success" role="alert">
    <p><%= simple_format @current_story.content %></p>
  </div>
</div>

<div class="nav-translation">
  <div class="btn-group">
    <% @translate_languages.each do |language| %>
      <%= link_to language, translate_story_path(@current_story, language: language), remote: :true, class: "btn btn-default alert alert-info" %>
    <% end %>
  </div>
</div>

<div id="translations">
</div>
<div id="vocabularies">
</div>
<div id="comments">
  <div id="comments-content">
    <table class="table" id="comments-holder">
      <% @current_story.comments.each do |comment| %>
        <%= render "comments/comment", comment: comment %>
      <% end %>
    </table>
  </div>
  <div id="comment-form">
    <%= render "comments/form", comment: Comment.new, story: @current_story %>
  </div>
</div>

<% end %>
